<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MY MUSIC"
        android:textColor="#3AA2F4"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        tools:ignore="HardCodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/music" />

    <SeekBar
        android:layout_width="380dp"
        android:id="@+id/seekbar"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/start"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_not_started_24" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_pause_circle_outline_24" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_stop_circle_24" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created By Aashish Kumar Yadav"
        android:textStyle="italic"
        android:layout_marginTop="170dp"
        android:layout_gravity="center"
        android:textColor="#4BBD88E3"
        tools:ignore="HardCodedText"
        />

</LinearLayout>